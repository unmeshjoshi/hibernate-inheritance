<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field">
        <union-subclass dynamic-insert="true" dynamic-update="true" lazy="false"
                        name="com.inheritance.samples.domain.unionsubclass.CustomizedCreditFacility"
                        extends="com.inheritance.samples.domain.unionsubclass.Facility"
                        table="CUSTOMIZED_CREDIT_FACILITY">
            <property column="PERIODICITY_TYPE" name="periodicityType" type="string"/> <!-- this is duplicated from joined-subclass definition from facility.hbm.xml-->
            <property column="EXTERNAL_SYSTEM" name="externalSystem" type="string"/>
        </union-subclass>
</hibernate-mapping>